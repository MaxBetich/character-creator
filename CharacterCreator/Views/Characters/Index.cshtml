@{
  Layout = "_Layout";
}

@using CharacterCreator.Models;

<h1>Characters for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No characters have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Character character in Model)
    {
      <li>@Html.ActionLink($"{character.CharacterName}", "Details", new { id = character.CharacterId }) | @character.CharacterClass | Level @character.Level</li>
    }
  </ul>
}

<p>@Html.ActionLink("Create New Character", "Create")</p>